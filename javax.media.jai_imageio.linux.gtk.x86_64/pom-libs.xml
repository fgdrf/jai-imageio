<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <parent>
        <groupId>javax.media.jai_imageio</groupId>
        <artifactId>download.parent</artifactId>
        <version>1.1.3</version>
        <relativePath>../pom-libs.xml</relativePath>
    </parent>

    <!-- This script was created to automagically download the external libs 
        required for this plugin to build and export correctly.
        
        To download the required  libraries, use:
            
            mvn package -f pom-libs.xml 
        
        After they have downloaded, make sure you:
          - refresh this project in Eclipse;
          - verify the classpath (Manfiest Runtime tab) references the libs
          - ensure the lib versions in the classpath are also correct. -->


    <developers>
        <developer>
            <id>Sev</id>
            <name>Severin</name>
            <email>djseverin@gmail.com</email>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>+10</timezone>
        </developer>
        <developer>
            <id>fgdrf</id>
            <name>Frank Gasdorf</name>
            <email>fgdrf@users.sourceforge.net</email>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <modelVersion>4.0.0</modelVersion>
    
    <artifactId>download.native-linux.x86_64</artifactId>
    <name>JAI Download native libs : linux x86_64</name>
    
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${basedir}</directory>
                            <includes>
                                <include>*.so</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy_native_libs</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <get dest="${basedir}">
                                    <url url="http://udig.refractions.net/files/downloads/jre/jai/imageio.linux.x86_64/libclib_jiio.so"/>
                                    <url url="http://udig.refractions.net/files/downloads/jre/jai/imageio.linux.x86_64/libmlib_jai.so"/>
                                </get>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>
